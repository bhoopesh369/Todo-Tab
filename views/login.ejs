<%- include('partials/header') %>

<div class="container centered">
  <h1>Login</h1>

  <div class="row">
    <div class="col">
      <div>
        <div class="loginform">
          <form action="/login" method="POST">
            <div class="form">
              <p for="name" class="label">Username</p>
              <input type="name" class="inputlogin" name="username">
            </div>
      
            <div class="form">
              <p for="password" class="label">Password </p>
              <input type="password" class="inputlogin" name="password">
            </div>
            
            <button type="submit" class="btn">Sign in</button>
          </form>

        </div>
      </div>
    </div>


  </div>
</div>

